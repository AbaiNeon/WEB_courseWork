@{
    ViewData["Title"] = "Fast Read";
}

<script>
    $(document).ready(function () {
        function Proccess(text) {
            var words = text.split(/\s*[,|!|?|.|-|(|)|:|;| ]\s*/);

            for (var i = 0; i < words.length; i++) {
                if (i % 2 != 0) {
                    words[i] = ShuffleWord(words[i]);
                }
            }
            return words.join(" ");
        }

        function ShuffleWord(word) {
            var a = word.split(""),
                n = a.length;

            for (var i = n - 2; i > 2; i--) {
                var j = Math.floor(Math.random() * (i - 1)) + 2;
                var tmp = a[i];
                a[i] = a[j];
                a[j] = tmp;
            }
            return a.join("");
        }

        $("#btnProcess").click(function () {
            var text = $("#taInput").val();
            $("#taOutput").val(Proccess(text));

        })
    })

</script>

<div class="container">
    <div class="row text-center form-group">
        <textarea id="taInput" class="form-control" rows="6" placeholder="Paste your text"></textarea>
    </div>
    <div class="row text-center form-group">
        <button id="btnProcess" >Process</button>
    </div>
    <div class="row text-center form-group"">
        <textarea id="taOutput" class="form-control" rows="6"></textarea>
    </div>
</div>



